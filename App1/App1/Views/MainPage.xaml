<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">

    <StackLayout>
        <Grid Margin="10,35,20,20" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Button x:Name ="Button1" IsEnabled="False"  BackgroundColor="Yellow" Text="Button1" />
            <Button x:Name ="Button2" IsEnabled="False" BackgroundColor="Yellow" Grid.Column="1" Text="Button2" />
            <Button x:Name ="Button3" IsEnabled="False" BackgroundColor="Yellow" Grid.Row="1" Text="Button3" />
            <Button x:Name ="Button4" IsEnabled="False" BackgroundColor="Yellow" Grid.Column="1" Grid.Row="1" Text="Button4" />
        </Grid>
        <Grid Margin="10,100,20,20">
            <Label Text="Результат"   Grid.Column="0" TextColor="Blue"/>
            <Label x:Name="Label_result" Text=""  Grid.Column="1" TextColor="Blue"/>
            <Button x:Name ="Button5" BackgroundColor="Red" Grid.Row="2" Grid.ColumnSpan="2" Text="Начать" />
        </Grid>
    </StackLayout>

</ContentPage>
